#!/bin/bash

delim="|"

if [[ "$(pulsemixer --get-mute)" = "1" ]]; then
	echo "Muted"
else
pulsemixer --get-volume | awk '{printf $2" ðŸ”Š"}' && echo -n $delim
fi

acpi | cut -d" " -f4,3  | sed -e "s/,//g;s/Discharging/ðŸ”‹/;s/Charging/ðŸ”Œ/;s/Full//" | tr -d "\n" && echo -n $delim

date +"%F %H:%M UTC: %s "

